@inherits LayoutComponentBase

<MudThemeProvider Theme=@Theme />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Gallery Application
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="py-2 ma-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme Theme = new MudTheme
    {
        Palette = new Palette
        {
            Primary = new MudBlazor.Utilities.MudColor("#333"),
            AppbarBackground = new MudBlazor.Utilities.MudColor("#333")
        },        
    };
}